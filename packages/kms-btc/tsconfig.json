{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./src", "../../node_modules/@types"],
    "types": ["node", "scure-btc-signer"],
    "paths": {
      "@scure/btc-signer": ["../../node_modules/@scure/btc-signer"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
